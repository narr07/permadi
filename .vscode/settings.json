// .vscode/settings.json
{
  "iconify.customCollectionJsonPaths": [
    "./app/assets/icons.json"
  ],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "tailwindCSS.classAttributes": ["class", "ui"],
  "tailwindCSS.experimental.classRegex": [
    ["ui:\\s*{([^)]*)\\s*}", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  // 1. Menonaktifkan Prettier & Format Otomatis VSCode
  "prettier.enable": false, // Menonaktifkan ekstensi Prettier di VSCode.
  "editor.formatOnSave": false, // Menonaktifkan format otomatis setiap kali file disimpan.

  // 2. Autofix ESLint saat Save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit", // Menjalankan autofix ESLint setiap kali save (hanya jika diperintah eksplisit).
    "source.organizeImports": "never" // Tidak pernah menata ulang import secara otomatis.
  },

  // 3. Mengatur Customisasi Rule ESLint di Editor
  "eslint.rules.customizations": [
    { "rule": "style/*", "severity": "off", "fixable": true },
    { "rule": "format/*", "severity": "off", "fixable": true },
    { "rule": "*-indent", "severity": "off", "fixable": true },
    { "rule": "*-spacing", "severity": "off", "fixable": true },
    { "rule": "*-spaces", "severity": "off", "fixable": true },
    { "rule": "*-order", "severity": "off", "fixable": true },
    { "rule": "*-dangle", "severity": "off", "fixable": true },
    { "rule": "*-newline", "severity": "off", "fixable": true },
    { "rule": "*quotes", "severity": "off", "fixable": true },
    { "rule": "*semi", "severity": "off", "fixable": true }
  ],
  // Penjelasan:
  // Di atas akan "menyembunyikan" warning atau error yang sifatnya stylistik (indentasi, spasi, kutip, titik koma, dll) di VSCode.
  // Tapi, jika bisa diperbaiki otomatis (autofixable), tetap akan diperbaiki oleh ESLint ketika kamu menjalankan autofix di editor.

  // 4. ESLint untuk Banyak Bahasa/Lint di Banyak File
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",

    "json",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql",
    "astro",
    "svelte",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss"
  ]
  // Penjelasan:
  // Mengaktifkan ESLint linting untuk semua jenis file tersebut, tidak hanya JavaScript/TypeScript saja.
}
